<?xml version="1.0" encoding="utf-8"?>
<com.ivan.translucentbar.translucentbar.core.windowinset.WindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/bottom_view_ll"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <include layout="@layout/divider_for_bnv" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemBackground="@android:color/white"
            app:itemIconTint="@drawable/bottom_navigation_icon_color_selector"
            app:itemTextColor="@drawable/bottom_navigation_text_color_selector"
            app:menu="@menu/menu_bottom_nav" />
    </LinearLayout>

    <com.ivan.translucentbar.translucentbar.core.windowinset.WindowInsetLayout
        android:id="@+id/main_content_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dip"
        android:fitsSystemWindows="true" />
</com.ivan.translucentbar.translucentbar.core.windowinset.WindowInsetLayout>